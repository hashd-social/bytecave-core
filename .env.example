# Environment
NODE_ENV=development

# Server Configuration
NODE_ID=vault-node-1
PORT=3004
NODE_URL=http://localhost:3004

# Blockchain Configuration (Hardhat Account #1)
RPC_URL=http://127.0.0.1:8545
PRIVATE_KEY=0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d

# Token Contracts
HASHD_TOKEN_ADDRESS=

# Vault Registry (deployed contracts)
VAULT_REGISTRY_ADDRESS=
VAULT_REGISTRY_STORAGE_ADDRESS=

# Vault Incentives (optional - for rewards)
VAULT_INCENTIVES_ADDRESS=

# Authorization Contracts (required for storage authorization)
GROUP_FACTORY_ADDRESS=

# Garbage Collection (Requirement 8)
GC_ENABLED=true
GC_RETENTION_MODE=hybrid
GC_MAX_STORAGE_MB=5000
GC_MAX_BLOB_AGE_DAYS=30
GC_MIN_FREE_DISK_MB=1000
GC_RESERVED_FOR_PINNED_MB=1000
GC_INTERVAL_MINUTES=10
GC_VERIFY_REPLICAS=false
GC_VERIFY_PROOFS=false

# Sharding (Requirement 7)
SHARD_COUNT=1024
NODE_SHARDS=[0,1023]

# Storage Configuration
DATA_DIR=./data
MAX_BLOB_SIZE_MB=10
MAX_STORAGE_GB=100

# Replication Configuration
REPLICATION_ENABLED=true
REPLICATION_TIMEOUT_MS=5000
REPLICATION_FACTOR=3

# Security
ENABLE_BANLIST=true
BANLIST_SYNC_URL=

# Performance
CACHE_SIZE_MB=50
COMPRESSION_ENABLED=false

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
