# Environment
NODE_ENV=

# Server Configuration
NODE_ID=
PORT=
NODE_URL=

# Blockchain Configuration
RPC_URL=
PRIVATE_KEY=

# Token Contracts
HASHD_TOKEN_ADDRESS=

# Storage Contracts
MESSAGE_STORAGE_ADDRESS=
POST_STORAGE_ADDRESS=

# Vault Registry (deployed contracts)
VAULT_REGISTRY_ADDRESS=
VAULT_REGISTRY_STORAGE_ADDRESS=

# Vault Incentives (optional - for rewards)
VAULT_INCENTIVES_ADDRESS=

# Authorization Contracts (required for storage authorization)
GROUP_FACTORY_ADDRESS=
APP_REGISTRY_ADDRESS=

# Garbage Collection
GC_ENABLED=
GC_RETENTION_MODE=
GC_MAX_STORAGE_MB=
GC_MAX_BLOB_AGE_DAYS=
GC_MIN_FREE_DISK_MB=
GC_RESERVED_FOR_PINNED_MB=
GC_INTERVAL_MINUTES=
GC_VERIFY_REPLICAS=
GC_VERIFY_PROOFS=

# Sharding
SHARD_COUNT=
NODE_SHARDS=

# Storage Configuration
DATA_DIR=
MAX_BLOB_SIZE_MB=
MAX_STORAGE_GB=

# Replication Configuration
REPLICATION_ENABLED=
REPLICATION_TIMEOUT_MS=
REPLICATION_FACTOR=

# Security
ENABLE_BLOCKED_CONTENT=

# App Registration & Filtering
# ALLOWED_APPS: Comma-separated list of app names this node accepts (default: hashd)
# Empty = accept all registered apps, '*' = wildcard accept all
ALLOWED_APPS=hashd
# REQUIRE_APP_REGISTRY: Enforce AppRegistry validation (default: true)
REQUIRE_APP_REGISTRY=true

# Performance
CACHE_SIZE_MB=
COMPRESSION_ENABLED=

# Monitoring
METRICS_ENABLED=
LOG_LEVEL=

# CORS
CORS_ORIGIN=

# P2P Configuration
# NOTE: P2P settings are now persisted in data/config.json
# Environment variables here are used as defaults/overrides
# Discovered peers are automatically saved to config.json for reconnection on restart

# P2P Bootstrap Peers (for cross-network discovery)
# Leave empty to use peers from config.json
P2P_BOOTSTRAP_PEERS=

# P2P Relay Peers (Docker relay - use 127.0.0.1 for localhost access)
# This is used by bytecave-core when running as a standalone vault node
# For bytecave-desktop, relay peers are passed via BYTENODE_RELAY_PEERS
# Update this with the actual peer ID from: docker logs bytecave-relay
# Leave empty to use peers from config.json
P2P_RELAY_PEERS=
